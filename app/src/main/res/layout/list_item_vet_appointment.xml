<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin_appointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_vetProfilePic"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_weight="1"
            android:gravity="center|start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vetPractise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_clientName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/tv_appointmentNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/tv_timeAndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_appointmentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drw_round_corner_grey"
            android:onClick="onClick"
            android:padding="@dimen/_5sdp"
            android:textAllCaps="true"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
