<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialogTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_13sdp"/>

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/img_close"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">

        <EditText
            android:id="@+id/edt_ticket_reason"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/drw_round_corner_grey"
            android:gravity="top"
            android:hint="Mention your ticket generation reason"
            android:maxLength="200"
            android:maxLines="8"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/homeCategory"
            android:textColorHint="@color/hint"
            android:textSize="@dimen/_12sdp"/>

        <Button
            android:id="@+id/btn_submit_ticket"
            style="@style/newButtonStyle"
            android:onClick="onClick"
            android:text="@string/str_submit"/>

    </LinearLayout>
</LinearLayout>
