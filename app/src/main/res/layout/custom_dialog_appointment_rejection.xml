<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_header"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_rejectionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="@dimen/_10sdp"
            android:text="@string/str_appointment_rejection"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/img_close"
            android:onClick="onClick"
            android:padding="@dimen/_10sdp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">

            <ImageView
                android:id="@+id/img_clientProfilePic"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_clientname_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/tv_appointmentCode_reject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status_reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"/>
            <!--<ImageView-->
            <!--android:id="@+id/img_basicarrow"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/img_right_arrow" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_appointment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appointment Date :"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:id="@+id/tv_appointmentDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_Appointment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_13sdp"/>

                <TextView
                    android:id="@+id/tv_appointmentTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/hint"
                    android:textSize="@dimen/_13sdp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reason_of_call_rejection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason of call rejection :"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/drw_round_corner_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/img_select_role"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#c4c4c4"/>

                <Spinner
                    android:id="@+id/sp_Rejection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:spinnerMode="dialog"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_other_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other :"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/edt_rejection_remark"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/drw_round_corner_grey"
                android:gravity="top"
                android:hint="Other reasons"
                android:maxLength="200"
                android:maxLines="8"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/homeCategory"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/_12sdp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit_rejection"
            style="@style/newButtonStyle"
            android:onClick="onClick"
            android:text="@string/str_submit"/>
    </LinearLayout>
</LinearLayout>
