<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lin_session_rate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_session_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="start|center"
                android:maxLines="1"
                android:textColor="@color/homeCategory"
                android:textSize="@dimen/_12sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txv_session_day"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_normal_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Normal Rate:"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/txv_normal_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/lbl_normal_rate"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/lbl_special_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/txv_normal_rate"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Special Rate:"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:layout_toRightOf="@+id/lbl_special_rate"
                    android:id="@+id/txv_special_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/homeCategory"
                    android:textSize="@dimen/_12sdp"/>
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/img_delete"
            android:onClick="onClick"
            android:src="@drawable/img_edit"/>

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/img_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/img_delete"/>
        <!--</LinearLayout>-->
    </RelativeLayout>


</LinearLayout>
