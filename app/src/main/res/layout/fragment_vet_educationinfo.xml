<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_vet_education"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
    >

    <include layout="@layout/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include layout="@layout/vet_profile_header"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/drw_round_corner_grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_university"/>

                    <TextView
                        android:freezesText="true"
                        android:id="@+id/tv_university"
                        style="@style/editTextStyle"
                        android:background="@drawable/drw_edittext_bg"
                        android:gravity="center|start"
                        android:hint="University Name"
                        android:onClick="onClick"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/drw_round_corner_grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_university"/>


                    <TextView
                        android:freezesText="true"
                        android:id="@+id/tv_degree"
                        style="@style/editTextStyle"
                        android:background="@drawable/drw_edittext_bg"
                        android:gravity="center|start"
                        android:hint="Degree Name"
                        android:onClick="onClick"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/drw_round_corner_grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/img_passing_year"/>


                    <TextView
                        android:freezesText="true"
                        android:id="@+id/tv_passingYear"
                        style="@style/editTextStyle"
                        android:background="@drawable/drw_edittext_bg"
                        android:gravity="center|start"
                        android:hint="@string/str_passing_year"
                        android:onClick="onClick"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/drw_round_corner_grey"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:src="@drawable/img_description"/>

                    <EditText
                        android:inputType="textCapSentences"
                        android:id="@+id/edt_vet_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drw_edittext_bg"
                        android:gravity="start|top"
                        android:hint="@string/str_description"
                        android:maxLength="300"
                        android:maxLines="6"
                        android:paddingRight="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:textColor="@color/homeCategory"
                        android:textColorHint="@color/hint"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    style="@style/newButtonStyle"
                    android:onClick="onClick"
                    android:text="@string/str_save"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>

